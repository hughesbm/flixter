<div class="lift-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center">Learn something new!</h1>
  <hr />
  <% @courses.each do |course| %>
    <div class="row">
      <div class= "col-xs-12 col-sm-8">
        <h3><%= link_to course.title, course_path(course) %></h3>
        <p><%= course.description %></p>
      </div>
      <div class="col-xs-12 col-sm-4 text-center">
        <div><%= link_to 'More Details', course_path(course), class: 'btn btn-primary btn-lg btn-block' %></div>
      </div>
    </div>
    <hr />
  <% end %>
</div>

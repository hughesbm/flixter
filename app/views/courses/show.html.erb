<div class="lift-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center"><%= @course.title %></h1>
  <hr />
  <div class="row">
    <div class="col-xs-12 col-sm-3 text-center pull-right">
      <% if @course.image.present? %>
        <%= image_tag @course.image.url(:square), class: "thumbnail img-responsive" %>
      <% else %>
        <%= image_tag 'no_img.jpg', class: "thumbnail img-responsive" %>
      <% end %>
      <% if current_user && current_user == @course.user %>
        <%= link_to 'Administer Course', instructor_course_path(@course), class: 'btn btn-warning btn-block' %>
      <% end %>
      <h3>
        <span class="label label-success">
          Cost: <%= number_to_currency @course.cost %>
        </span>
      </h3>
      <br />
    </div>
    <div class="col-xs-12 col-sm-9 pull-left">
      <p><%= @course.description %></p>
      <% @course.sections.each do |section| %>
        <div class="section">
          <%= section.title %>
          <% section.lessons.each do |lesson| %>
            <div class="lesson">
              <%= link_to lesson_path(lesson) do %>
                <b><%= lesson.title %></b>
                -
                <%= lesson.subtitle %>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

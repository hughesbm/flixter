<div class="lift-box col-xs-10 col-xs-offset-1">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-md-9">
      <h1><%= @course.title %></h1>
      <p><%= @course.description %></p>
      <br />
      <h3><span class="label label-success">Cost: <%= number_to_currency @course.cost %></span></h3>
      <% if current_user && current_user == @course.user %>
        <%= link_to 'Administer Course', instructor_course_path(@course), class: 'btn btn-warning' %>
      <% elsif current_user && current_user.enrolled_in?(@course) %>
        <h3><span class="label label-info">You are enrolled in this course!</span></h3>
      <% else %>
        <%= link_to 'Enroll in Course', course_enrollments_path(@course), class: 'btn btn-primary', method: :post %>
      <% end %>
    </div>
    <div class="col-xs-12 col-sm-4 col-md-3">
      <% if @course.image.present? %>
        <%= image_tag @course.image.url(:square), class: "img-responsive" %>
      <% else %>
        <%= image_tag 'no_img.jpg', class: "thumbnail img-responsive" %>
      <% end %>
    </div>
  </div>
  <hr />
  <div class="row">
    <div class="col-xs-12">
      <% @course.sections.each do |section| %>
        <div class="section flat-box row text-center">
          <h2><%= section.title %></h2>
          <% section.lessons.each do |lesson| %>
            <div class="col-xs-12 col-sm-6">
              <div class="lesson flex-center text-center">
                <%= link_to lesson_path(lesson) do %>
                  <b><%= lesson.title %></b>
                  <br />
                  <p><%= lesson.subtitle %></p>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

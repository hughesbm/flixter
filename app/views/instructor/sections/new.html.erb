<div class="lift-box col-xs-10 col-sm-8 col-md-6 col-xs-offset-1 col-sm-offset-2 col-md-offset-3">
  <h1>Add a new section</h1>
  <br />
  <%= simple_form_for @section, url: instructor_course_sections_path(@course) do |f| %>
    <div class="form-inputs">
      <%= f.input :title %>
    </div>

    <div class="form-actions">
      <%= f.submit 'Add Section', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

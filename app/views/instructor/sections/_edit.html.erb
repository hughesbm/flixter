<%= simple_form_for @section, url: '#', method: :patch, html: { id: 'editSectionModalForm' } do |f| %>
  <div class="modal-body">
    <div class="form-inputs">
      <%= f.input :title %>
    </div>
    <h4>Delete this section?</h4>
    <%= link_to 'Yes, delete it', '#', method: :delete, data: { confirm: 'Are you ABSOLUTELY SURE you want to delete this section? Students who paid for it may come after you with torches and pitchforks.' }, class: 'btn btn-danger', id: 'delete_button' %>
  </div>
  <div class="modal-footer">
    <div class="form-actions">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      <%= f.button :submit, 'Update', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

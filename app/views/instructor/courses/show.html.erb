<div class="lift-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center"><%= current_course.title %></h1>
  <hr />
  <div class="row">
    <div class="col-xs-12 col-sm-4 text-center pull-right">
      <%= link_to 'Add New Section', new_instructor_course_section_path(current_course), class: 'btn btn-primary btn-lg btn-block' %>
      <%= link_to 'Preview as Student', course_path(current_course), class: 'btn btn-warning btn-lg btn-block' %>
      <br />
    </div>
    <div class="col-xs-12 col-sm-8 pull-left">
      <% if current_course.sections.present? %>
        <ul>
          <% current_course.sections.each do |section| %>
            <li>
              <%= section.title %> - <%= link_to 'Add New Lesson', new_instructor_section_lessons_path(section) %>
              <% if section.lessons.present? %>
                <ul>
                  <% section.lessons.each do |lesson| %>
                    <li>
                      <b><%= lesson.title %></b>
                      &mdash;
                      <%= lesson.subtitle %>
                    </li>
                  <% end %>
                </ul>
              <% end %>
              <br class="clear" />
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>

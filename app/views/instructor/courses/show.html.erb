<div class="lift-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center"><%= @course.title %></h1>
  <hr />
  <%= link_to 'Preview as Student', course_path(@course), class: 'btn btn-warning pull-right' %>
  <br class="clear" />
  <div class="text-center">
    <%= link_to 'Add New Section', new_instructor_course_section_path(@course), class: 'btn btn-primary btn-lg' %>
  </div>
  <% if @course.sections.present? %>
    <ul>
      <% @course.sections.each do |section| %>
        <li><%= section.title %></li>
      <% end %>
    </ul>
  <% end %>
</div>

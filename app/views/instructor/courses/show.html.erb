<div class="lift-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center"><%= current_course.title %></h1>
  <hr />
  <div class="row">
    <div class="sidebar col-xs-12 col-sm-4 text-center pull-right">
      <div class="thumbnail">
        <%= render 'course_image', course: current_course %>
      </div>
      <%= link_to 'Add New Section', new_instructor_course_section_path(current_course), class: 'btn btn-primary' %>
      <%= link_to 'Preview as Student', course_path(current_course), class: 'btn btn-warning' %>
      <br />
    </div>
    <div class="col-xs-12 col-sm-8 pull-left">
      <div class="section-box flat-box row">
        <% if current_course.sections.present? %>
          <ul>
            <% current_course.sections.each do |section| %>
              <li>
                <%= section.title %> - <%= link_to 'Add New Lesson', new_instructor_section_lessons_path(section) %>
                <% if section.lessons.present? %>
                  <ul class="lessons">
                    <% section.lessons.rank(:row_order).each do |lesson| %>
                      <li data-update-url=<%= instructor_lesson_path(lesson) %>>
                        <b><%= lesson.title %></b>
                        &mdash;
                        <%= lesson.subtitle %>
                      </li>
                    <% end %>
                  </ul>
                <% end %>
                <br class="clear" />
              </li>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>
